<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.quicktodo</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>QuickTodo</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        QuickTodo - a simple plugin for managing hierarchical tasks per project.
        <br><br>
        <b>Features:</b>
        <ul>
            <li>Add and remove tasks</li>
            <li>Mark tasks as complete with checkboxes</li>
            <li>Create subtasks up to 3 levels deep</li>
            <li>Per-project task persistence</li>
        </ul>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="QuickTodo"
                    anchor="right"
                    icon="/icons/checklist.svg"
                    factoryClass="com.example.quicktodo.ui.ChecklistToolWindowFactory"/>

        <projectService serviceImplementation="com.example.quicktodo.service.TaskService"/>
    </extensions>

    <actions>
        <action id="com.example.quicktodo.ShowChecklist"
                class="com.example.quicktodo.action.ShowChecklistAction"
                text="Show QuickTodo"
                description="Open QuickTodo tool window">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="com.example.quicktodo.AddTask"
                class="com.example.quicktodo.action.AddTaskAction"
                text="Add Task"
                description="Add a new task to QuickTodo">
            <keyboard-shortcut keymap="$default" first-keystroke="meta shift T"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>