<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.oleksiy.quicktodo</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>QuickTodo</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/Oleksiy1333">Oleksiy</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Todo list and task management without leaving your IDE.
        <br><br>
        <b>Features:</b>
        <ul>
            <li><b>Nested subtasks</b> with up to 3 levels of hierarchy with drag-and-drop reordering.</li>
            <li><b>Priorities</b> — Mark important tasks with priority levels.</li>
            <li><b>Focus timer</b> — Start a timer on any task to keep focus and track how long you spend on it.</li>
            <li><b>Per-project storage</b> — Each project maintains its own task list, stored locally in the .idea folder.</li>
            <li><b>Link tasks to code locations</b> — Attach file and line references to tasks. Click a linked task to jump directly to the relevant code. Great for tracking TODOs, bug locations, or areas needing refactoring.</li>
        </ul>
        <br>
        <b>Keyboard Shortcuts:</b>
        <ul>
            <li><b>Ctrl+Alt+C</b> (Cmd+Alt+C on Mac) — Open QuickTodo panel</li>
            <li><b>Ctrl+Shift+T</b> (Cmd+Shift+T on Mac) — Add a new task</li>
        </ul>
        <br>
        <b>Tips:</b>
        <ul>
            <li>Shortcuts can be customized in Settings → Keymap → search for "QuickTodo"</li>
            <li>Ask AI to edit <code>.idea/quicktodo.tasklist.xml</code> to quickly set up or modify tasks</li>
        </ul>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="terminal-integration.xml">org.jetbrains.plugins.terminal</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="QuickTodo"
                    anchor="right"
                    icon="/icons/checklist.svg"
                    factoryClass="com.oleksiy.quicktodo.ui.ChecklistToolWindowFactory"/>

        <projectService serviceImplementation="com.oleksiy.quicktodo.service.TaskService"/>
        <projectService serviceImplementation="com.oleksiy.quicktodo.service.FocusService"/>
        <projectService serviceImplementation="com.oleksiy.quicktodo.service.DailyTaskStatsService"/>
        <projectService serviceImplementation="com.oleksiy.quicktodo.editor.TaskEditorMarkerService"/>

        <applicationService serviceImplementation="com.oleksiy.quicktodo.settings.QuickTodoSettings"/>

        <applicationConfigurable
                parentId="tools"
                instance="com.oleksiy.quicktodo.settings.QuickTodoConfigurable"
                id="com.oleksiy.quicktodo.settings.QuickTodoConfigurable"
                displayName="QuickTodo"/>

        <postStartupActivity implementation="com.oleksiy.quicktodo.editor.TaskEditorMarkerStartupActivity"/>
    </extensions>

    <actions>
        <action id="ActivateQuickTodoToolWindow"
                class="com.oleksiy.quicktodo.action.ShowChecklistAction"
                text="QuickTodo"
                description="Open QuickTodo tool window">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q" replace-all="true"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt C" replace-all="true"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta alt C" replace-all="true"/>
            <add-to-group group-id="ActivateToolWindowActions"/>
        </action>

        <action id="com.oleksiy.quicktodo.AddTask"
                class="com.oleksiy.quicktodo.action.AddTaskAction"
                text="Add QuickTodo"
                description="Add a new task to QuickTodo">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl F2" replace-all="true"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta shift T" replace-all="true"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta shift T" replace-all="true"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>

        <action id="com.oleksiy.quicktodo.ShowRecentTasks"
                class="com.oleksiy.quicktodo.action.ShowRecentTasksAction"
                text="Recent QuickTodos"
                description="Show recent tasks in a popup">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl F1"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta F1" replace-all="true"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta F1" replace-all="true"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <registryKey key="quicktodo.dumb.aware" defaultValue="true" description="Allow QuickTodo to work during indexing"/>
    </extensions>
</idea-plugin>